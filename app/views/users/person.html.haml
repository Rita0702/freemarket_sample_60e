                %option{value: "沖縄県"} 沖縄県
                %option{value: "未定"} 未定

          .field
            %label.first-text 市区町村
            %span.top-gray-text 任意
            %br/
            %input{name: "city",placeholder: '例）横浜市緑区', size: "40", class: 'textarea'}
          .field
            %label.first-text 番地
            %span.top-gray-text 任意
            %br/
            %input{name: "district",placeholder: '例）青山1-1-1', size: "40", class: 'textarea'}
          .field
            %label.first-text 建物名
            %span.top-gray-text 任意
            %br/
            %input{name: "building",placeholder: '例）柳ビル103', size: "40", class: 'textarea'}
          .field
            %input.form-submit{type: 'submit', value: '登録する'}
        
          .field-right
            = link_to '本人情報の登録について', '#', class: 'right-text'
            = fa_icon 'chevron-right', class: 'right-text'

= render 'shared/footer'