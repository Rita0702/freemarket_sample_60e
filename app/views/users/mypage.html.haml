= render "shared/header"
- breadcrumb :mypage
= render "layouts/breadcrumbs"

.body
  .mypage
    = render 'side-bar'

    .mypage__main
      .mypage-section-user
        = link_to '#', class: 'link-non' do
          .section-image
            = image_tag "//static.mercdn.net/images/member_photo_noimage_thumb.png", class: 'user-icon'
          .user-name メルカリ
          .mypage-number 
            .evaluation 評価
            %span.count 0
            .evaluation 出品数
            %span.count 0
      .mypage-tab
        %ul.section-tab
          %li.active
            = link_to 'お知らせ', '#', class: 'link-non'
          %li.non-active
            = link_to 'やることリスト', '#', class: 'link-non' 

