.mercari-header-background-color
  .mercari__head
    .mercari__head__top
      .mercari__head__logo
        %a.mercari__head__logo--image
          =image_tag "https://web-jp-assets.mercdn.net/_next/static/images/logo-acdd90ac4f472d5a6f7a330d33ab1225.svg", class: "mercari__head__logo-image"
      %form.search__form
        %input{type: "search", placeholder: '何かお探しですか？', class: "search__form__input"}
        .search-button
          = fa_icon 'search', class: 'icon-search'
    .mercari__head__bottom
      .mercari__head__bottom__categorys
        .mercari__head__bottom__category
          = link_to '#', class: 'mercari__category' do
            = fa_icon 'list', class: 'icon-list'
            .list-text カテゴリーから探す
        .mercari__head__bottom__brand
          = link_to '#', class: 'mercari__brand' do
            = fa_icon 'tag', class: 'icon-tag'
            .tag-text ブランドから探す
      .mercari__head__bottom__register
        .mercari__head__bottom__new
          = link_to '新規会員登録', '#', class: 'mercari__head__bottom__signup'
        .mercari__head__bottom__log
          = link_to 'ログイン', '#', class: 'mercari__head__bottom__in'
        .mercari-login-header
          %ul
            %li
